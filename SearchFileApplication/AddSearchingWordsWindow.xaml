<Window x:Class="SearchFileApplication.AddSearchingWordsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Searching Words" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBox x:Name="textBoxAddSearchingWords" Width="200" VerticalContentAlignment="Center"></TextBox>
            <Button x:Name="addButton" Content="+" Width="42" HorizontalContentAlignment="Center" 
                    Click="addButton_Click"></Button>
            <Button x:Name="deleteButton" Content="-" Width="42" HorizontalContentAlignment="Center" 
                    Click="deleteButton_Click"></Button>
        </StackPanel>
        <ListBox x:Name="listOfSearchingWords" Grid.Row="0"/>
    </Grid>
</Window>
